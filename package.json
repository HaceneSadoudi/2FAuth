  "license": "MIT",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only --exit-child server.ts",
    "build": "tsc --build",
    "start:prod": "NODE_ENV=production npm build && node ./dist/server.js",
    "start:prod:pm2": "pm2 delete tfauth; pm2 start --name tfauth \"npx ts-node --transpile-only server.ts\"",
    "db:migrate": "npx prisma migrate dev --name user-entity --create-only && npx prisma generate",
    "db:push": "npx prisma db push"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.1.0",
    "@types/speakeasy": "^2.0.7",
    "morgan": "^1.10.0",
    "prisma": "^4.13.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "pm2": "^5.3.0",
    "speakeasy": "^2.0.0"
  }
}
