{
  "name": "2FAuth",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/HaceneSadoudi/2FAuth.git",
  "author": "Hacene Sadoudi <sadoudi2019@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "pm2 delete tfauth; pm2 start --name tfauth \"npx ts-node --transpile-only server.ts\"",
    "build": "tsc --build",
    "build:backend": "dotenv -e .env.prod -- tsc --build",
    "build:frontend": "dotenv -e ./web/.env.prod -- npm run build --prefix web",
    "start:dev": "dotenv -e .env.dev -- ts-node-dev --respawn --transpile-only --exit-child server.ts",
    "serve:prod": "dotenv -e .env.prod -- node ./dist/server.js",
    "start:prod": "npm run build:backend && npm run build:frontend && npm run serve:prod",
    "test": "dotenv -e .env.test -- jest",
    "db:migrate": "npx prisma migrate dev --name user-entity --create-only && npx prisma generate",
    "db:migrate:dev": "dotenv -e .env.dev -- npx prisma migrate dev --name user-entity --create-only && npx prisma generate",
    "db:migrate:test": "dotenv -e .env.test -- npx prisma migrate dev --name user-entity --create-only && npx prisma generate",
    "db:migrate:prod": "dotenv -e .env.prod -- npx prisma migrate dev --name user-entity --create-only && npx prisma generate",
    "db:push": "npx prisma db push",
    "db:push:dev": "dotenv -e .env.dev -- npx prisma db push",
    "db:push:test": "dotenv -e .env.test -- npx prisma db push",
    "db:push:prod": "dotenv -e .env.prod -- npx prisma db push"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.4",
    "@types/node": "^20.1.0",
    "@types/speakeasy": "^2.0.7",
    "@types/supertest": "^6.0.2",
    "dotenv": "^16.4.5",
    "dotenv-cli": "^7.4.2",
    "jest": "^29.7.0",
    "morgan": "^1.10.0",
    "prisma": "^4.13.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.1.4",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "@prisma/client": "^4.13.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-validator": "^7.1.0",
    "pm2": "^5.3.0",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  }
}
